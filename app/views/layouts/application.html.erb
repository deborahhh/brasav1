						<a href="#" class="social fa fa-linkedin"></a>
					</div><!-- /social -->
				</div>
				<!-- /col #1 -->

				<!-- col #2 -->
				<div class="spaced col-md-3 col-sm-4 hidden-xs">
					<h3><strong>Parceiros</strong></h3>
					<%= image_tag "ambev.png", class: "partner", style: "margin-top: 10px;" %>
				</div>
				<!-- /col #2 -->

				<!-- col #3 -->
				<div class="spaced col-md-3 col-sm-4 hidden-xs">
					<%= image_tag "fundacao-estudar.gif", class: "partner" %>
				</div>
				<!-- /col #3 -->

				<!-- col #4 -->
				<div class="spaced col-md-3 col-sm-4">
					<%= image_tag "ene.png", class: "partner" %>

				</div>
				<!-- /col #4 -->

			</div>

		</div>

