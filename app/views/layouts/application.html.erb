        <style>
            .btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:visited {
                background-color: #0d730d;
                border-color: #0d730d;
            }
            #footer .logo_footer {
                text-align: center;

            }

            #footer .dark {
                background-color: #ddd;
            }
            #footer .white {
                color: #333;
            }

            #footer {
                color: #333;
                background-color: #fff;
            }
            #footer a.social {
                background: rgba(0,0,0,0.5);
            }
            #footer h3 {
                color: #333;
            }

            #footer .partner {
                height: 50px;
            }
            .callout.dark.arrow-up {
                padding: 60px 10px;
            }
            section {
                padding: 60px 10px;
            }
            .callout {
                padding: 30px 10px;
            }

            #topBar .container {
                padding-left: 30px;
            }
            .medium_light_white, .small_light_white {
                font-family: "Open Sans";
