	  <body class="smoothscroll">
	
			
	
			<% if notice %>
			  <p class="alert alert-success"><%= notice %></p>
			<% end %>
			<% if alert %>
			  <p class="alert alert-danger"><%= alert %></p>
			<% end %>
	
			<div id="wrapper">

				<div id="header"><!-- class="sticky" for sticky menu -->

					<!-- Top Bar -->
					<header id="topBar">
						<div class="container">

							<div class="pull-right fsize13 margin-top10 hide_mobile">

								<!-- mail , phone -->
								<div></div>

								<div class="block text-right"><!-- social -->
									<a href="http://theme.stepofweb.com/Epona/v1.0/HTML/#" class="social fa fa-facebook"></a>
									<a href="http://theme.stepofweb.com/Epona/v1.0/HTML/#" class="social fa fa-twitter"></a>
									<a href="http://theme.stepofweb.com/Epona/v1.0/HTML/#" class="social fa fa-linkedin"></a>
								</div><!-- /social -->

							</div>

							<!-- Logo -->
							<%= link_to root_path, class: "logo logo-header" do %>
								<%= image_tag("logo.png", height: "50") %>
								<span>Brazilian Student Association</span>
							<% end %>
						</div><!-- /.container -->
					</header>
					<!-- /Top Bar -->

				</div>
	
<%= content_for?(:content) ? yield(:content) : yield %>

	<!-- FOOTER -->
	<footer id="footer">
		<div class="container">

			<div class="row">

